<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 
        You can override the default style of all the items in the PullToRefresh library.
        
        These styles are:
        *   ptr_headerContainer
        *   ptr_header
        *   ptr_arrow
        *   ptr_spinner
        *   ptr_text
        
        More info on changing the look of the PullToRefresh library can be found on the
        project page: https://github.com/erikwt/PullToRefresh-ListView
     -->
     
     <!-- Examples below, remove comment to see effect -->
    <style name="ptr_headerContainer">
        
        <!-- Change the background color -->
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="ptr_text">
        
        <!-- Change the text style and color -->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#848484</item>
        <item name="android:textSize">15sp</item>
    </style>
    
</resources>